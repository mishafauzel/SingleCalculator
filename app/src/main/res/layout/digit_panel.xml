<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/delete_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F44336"
            android:gravity="center"
            android:text="C"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/branches"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/action_number_color"
            android:gravity="center"
            android:text="()"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/percent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/action_number_color"
            android:gravity="center"
            android:text="%"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/divide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/action_number_color"
            android:gravity="center"
            android:text="/"
            android:textSize="@dimen/text_size" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/number7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/number_button_color"
            android:gravity="center"
            android:onClick="onNumberClicked"
            android:tag="7"
            android:text="7"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/number8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/number_button_color"
            android:gravity="center"
            android:onClick="onNumberClicked"
            android:tag="8"
            android:text="8"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/number9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/number_button_color"
            android:gravity="center"
            android:onClick="onNumberClicked"
            android:tag="9"
            android:text="9"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/multiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/action_number_color"
            android:gravity="center"
            android:text="x"
            android:textSize="@dimen/text_size" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/number4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/number_button_color"
            android:gravity="center"
            android:onClick="onNumberClicked"
            android:tag="4"
            android:text="4"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/number5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/number_button_color"
            android:gravity="center"
            android:onClick="onNumberClicked"
            android:tag="5"
            android:text="5"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/number6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/number_button_color"
            android:gravity="center"
            android:onClick="onNumberClicked"
            android:tag="6"
            android:text="6"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/action_number_color"
            android:gravity="center"
            android:text="-"
            android:textSize="@dimen/text_size" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/number1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/number_button_color"
            android:gravity="center"
            android:onClick="onNumberClicked"
            android:tag="1"
            android:text="1"

            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/number2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/number_button_color"
            android:gravity="center"
            android:onClick="onNumberClicked"
            android:tag="2"
            android:text="2"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/number3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/number_button_color"
            android:gravity="center"
            android:onClick="onNumberClicked"
            android:tag="3"
            android:text="3"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/action_number_color"
            android:gravity="center"
            android:text="+"
            android:textSize="@dimen/text_size" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/changeSign"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F44336"
            android:gravity="center"
            android:text="+/-"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/number0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/action_number_color"
            android:gravity="center"
            android:text="0"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/action_number_color"
            android:gravity="center"
            android:text="."
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/equals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F44336"
            android:gravity="center"
            android:text="="
            android:textSize="@dimen/text_size" />
    </TableRow>
</TableLayout>
